{% extends 'base.html.twig' %}

{% block body %}
        <div class="row">
            <div class="col-md-12 align-self-start">
                <h3>Choose your project</h3>
            </div>
        </div>

        <div class="row">
            {% for project in projects %}
                <div class = "col-md-3">
                    <a class="link-to-status-page" href="{{ path('status_page', {'id' : project.id}) }}">
                        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                            <div class="card-body">
                                <h6 class="card-title">{{ project.title }}</h6>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
            <div class = "col-md-3">
                <a href="{{ path('add_project') }}">
                    <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
                        <div class="card-body">
                            <h6 class="card-title">+Add Project</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
{% endblock %}